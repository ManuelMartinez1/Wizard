<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F1E1F"
    tools:context=".SignUp">

    <TextView
        android:id="@+id/registro"
        android:layout_width="316dp"
        android:layout_height="52dp"
        android:text="@string/registro"
        android:textColor="#F5FBEF"
        android:textSize="32sp"
        android:fontFamily="@font/inter"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.337"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075" />

    <EditText
        android:id="@+id/nombre"
        android:layout_width="148dp"
        android:layout_height="54dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/inter"
        android:textSize="16sp"
        android:textStyle="bold"
        android:hint="Nombre"
        android:padding="10dp"
        android:textColorHint="#C0C0C0"
        app:layout_constraintEnd_toStartOf="@+id/apellido"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registro" />

    <EditText
        android:id="@+id/usuario"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/inter"
        android:textSize="16sp"
        android:textStyle="bold"
        android:hint="Username"
        android:padding="10dp"
        android:textColorHint="#C0C0C0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registro" />

    <EditText
        android:id="@+id/correo_electronico"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_marginTop="304dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/inter"
        android:textSize="16sp"
        android:textStyle="bold"
        android:hint="Correo electrónico"
        android:padding="10dp"
        android:textColorHint="#C0C0C0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registro" />

    <EditText
        android:id="@+id/contrasena"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_marginTop="396dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/inter"
        android:textSize="16sp"
        android:textStyle="bold"
        android:hint="Contraseña"
        android:padding="10dp"
        android:textColorHint="#C0C0C0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registro" />

    <EditText
        android:id="@+id/confirmar_contrasena"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_marginTop="484dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/inter"
        android:textSize="16sp"
        android:textStyle="bold"
        android:hint="Confirmar contraseña"
        android:padding="10dp"
        android:textColorHint="#C0C0C0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registro" />

    <EditText
        android:id="@+id/apellido"
        android:layout_width="148dp"
        android:layout_height="54dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/inter"
        android:textSize="16sp"
        android:textStyle="bold"
        android:hint="Apellido"
        android:padding="10dp"
        android:textColorHint="#C0C0C0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registro" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/button_background"
        android:textColor="#F5FBEF"
        android:fontFamily="@font/inter"
        android:text="Registrarme"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/confirmar_contrasena"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/confirmar_contrasena"
        app:layout_constraintTop_toBottomOf="@+id/confirmar_contrasena" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="180dp"
        android:ems="10"
        android:inputType="date"
        android:textColor="#F5FBEF"
        android:text="Fecha de nacimiento"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/apellido"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/nombre"
        app:layout_constraintTop_toTopOf="@+id/registro" />
</androidx.constraintlayout.widget.ConstraintLayout>